<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>

    <!-- SQL dialect -->
    <property name="dialect">org.hibernate.dialect.HSQLDialect</property>

    <!-- Enable Hibernate's automatic session context management -->
    <property name="current_session_context_class">thread</property>

    <!-- Echo all executed SQL to stdout -->
    <property name="show_sql">true</property>

    <mapping resource="mappings/BinaryDataEntity.hbm.xml"/>
    <mapping resource="mappings/CategoryAccessEntity.hbm.xml"/>
    <mapping resource="mappings/CategoryEntity.hbm.xml"/>
    <mapping resource="mappings/ContentAccessEntity.hbm.xml"/>
    <mapping resource="mappings/ContentBinaryDataEntity.hbm.xml"/>
    <mapping resource="mappings/ContentEntity.hbm.xml"/>
    <mapping resource="mappings/ContentHandlerEntity.hbm.xml"/>
    <mapping resource="mappings/ContentHomeEntity.hbm.xml"/>
    <mapping resource="mappings/PortletEntity.hbm.xml"/>
    <mapping resource="mappings/ContentTypeEntity.hbm.xml"/>
    <mapping resource="mappings/ContentVersionEntity.hbm.xml"/>
    <mapping resource="mappings/DefaultSiteAccessEntity.hbm.xml"/>
    <mapping resource="mappings/GroupEntity.hbm.xml"/>
    <mapping resource="mappings/LanguageEntity.hbm.xml"/>
    <mapping resource="mappings/LogEntryEntity.hbm.xml"/>
    <mapping resource="mappings/MenuItemAccessEntity.hbm.xml"/>
    <mapping resource="mappings/MenuItemContentEntity.hbm.xml"/>
    <mapping resource="mappings/MenuItemEntity.hbm.xml"/>
    <mapping resource="mappings/PageEntity.hbm.xml"/>
    <mapping resource="mappings/PageWindowEntity.hbm.xml"/>
    <mapping resource="mappings/PageTemplateEntity.hbm.xml"/>
    <mapping resource="mappings/PageTemplatePortletEntity.hbm.xml"/>
    <mapping resource="mappings/PageTemplateRegionEntity.hbm.xml"/>
    <mapping resource="mappings/PreferencesEntity.hbm.xml"/>
    <mapping resource="mappings/RelatedContentEntity.hbm.xml"/>
    <mapping resource="mappings/RememberedLoginEntity.hbm.xml"/>
    <mapping resource="mappings/SectionContentEntity.hbm.xml"/>
    <mapping resource="mappings/SectionContentTypeFilterEntity.hbm.xml"/>
    <mapping resource="mappings/SiteEntity.hbm.xml"/>
    <mapping resource="mappings/UnitEntity.hbm.xml"/>
    <mapping resource="mappings/UserEntity.hbm.xml"/>
    <mapping resource="mappings/UserStoreEntity.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
